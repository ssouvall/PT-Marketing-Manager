<%- include("partials/header") -%>

<main class="dashboard col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Tasks</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
          <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
          <span data-feather="calendar"></span>
          This week
        </button>
      </div>
    </div>

    <div class="container tasks-log">
      <div>
        <a href="/new-task"><button type="submit" class="btn btn-primary contact-btn">+ Add Task</button></a>
      </div>
      <div class="contact-list">
          <table class="tasks-list" style="width: 100%">
            <tr>
              <th>
                <input type="checkbox">
              </th>
              <th>
                Due Date
              </th>
              <th>
                Referral Source
              </th>
              <th>
                Task
              </th>
            </tr>
            <tr>
              <td>
                <input type="checkbox">
              </td>
              <td>
                <a href="/task">March 15, 2021</a>
              </td>
              <td>
                Chris Gay
              </td>
              <td>
                Drop off thank you note, flyers and referral pads
              </td>
              <td>
                <button class="btn btn-primary">X</button>
              </td>
            </tr>
            <tr>
              <td>
                <input type="checkbox">
              </td>
              <td>
                <a href="/task">April 1, 2021</a>
              </td>
              <td>
                Eric Heiden
              </td>
              <td>
                Send thank you note for new referral
              </td>
              <td>
                <button class="btn btn-primary">X</button>
              </td>
            </tr>
            <tr>
              <td>
                <input type="checkbox">
              </td>
              <td>
                <a href="/task">April 15, 2021</a>
              </td>
              <td>
                Dustin Hedstrom
              </td>
              <td>
                Call to set up lunch
              </td>
              <td>
                <button class="btn btn-primary">X</button>
              </td>
            </tr>
            <% tasks.forEach(function(task) { %>
              <tr>
                <td>
                  <input type="checkbox">
                </td>
                <td>
                  <% const date = task.dueDate %>
                  <a href="/tasks/<%= date %>"><%= date %></a>
                </td>
                <td>
                  <% const source = task.refSource %>
                  <%= source %>
                </td>
                <td>
                  <% const description = task.description %>
                  <%= description %>
                </td>
                <td>
                  <button class="btn btn-primary">X</button>
                </td>
              </tr>
            <% }); %>
          </table>
      </div>
  </div>

</main>

<%- include("partials/footer") -%>